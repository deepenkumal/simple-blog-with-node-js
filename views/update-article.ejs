<%-include('./includes/_header') %>
    <%- include('./includes/_navbar.ejs') %>
<div class="form-container mx-3">
    
    <form action="/article/update-article/<%= article.slug%>" method="post">

        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input type="text" value="<%= article.title %>" name="title" class="form-control" id="">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" value="<%= article.description %>" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>

